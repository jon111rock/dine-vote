{
  "rules": [
    {
      "name": "命名規範 - 元件",
      "pattern": "^[A-Z][a-zA-Z0-9]*\\.vue$",
      "message": "Vue元件命名應使用PascalCase格式，如：RestaurantCard.vue"
    },
    {
      "name": "命名規範 - 函數",
      "pattern": "^[a-z][a-zA-Z0-9]*$",
      "message": "函數命名應使用camelCase格式，如：createRoom()"
    },
    {
      "name": "禁止使用console.log",
      "pattern": "console\\.log\\(",
      "message": "生產環境請勿使用console.log，請改用適當的日誌系統"
    },
    {
      "name": "Firebase資料庫規範",
      "pattern": "firebase\\.(get|update|set)\\(",
      "message": "請確保Firebase操作有適當的錯誤處理"
    },
    {
      "name": "Vue元件格式",
      "pattern": "<script setup",
      "message": "請使用Vue 3 Composition API與<script setup>格式開發元件"
    },
    {
      "name": "CSS命名規範",
      "pattern": "\\.[-a-z]+",
      "message": "CSS類名應使用kebab-case格式，如：.user-avatar"
    },
    {
      "name": "中文字串檢查",
      "pattern": "\"[^\"]*[\u4e00-\u9fa5]+[^\"]*\"",
      "message": "請考慮將中文字串放入i18n檔案以支援多語言"
    },
    {
      "name": "API錯誤處理",
      "pattern": "fetch\\(|axios\\.",
      "message": "API請求應包含適當的錯誤處理機制"
    },
    {
      "name": "AI請求檢查",
      "pattern": "openai\\.|gpt\\.",
      "message": "AI請求應設有超時處理與錯誤備案"
    },
    {
      "name": "地圖整合檢查",
      "pattern": "map\\.|Map\\.|地圖",
      "message": "地圖相關功能請確保有效處理定位權限和定位失敗的情況"
    },
    {
      "name": "即時同步檢查",
      "pattern": "realtime|socket|websocket|onSnapshot",
      "message": "即時同步功能應處理網路中斷與重連情況"
    },
    {
      "name": "投票功能提示",
      "pattern": "vote|poll|票|投票",
      "message": "請確保投票狀態正確同步並處理邊緣情況"
    },
    {
      "name": "Pinia狀態管理檢查",
      "pattern": "defineStore|usePinia|createPinia",
      "message": "使用Pinia時請確保狀態設計合理且有持久化考量"
    },
    {
      "name": "Git提交訊息格式檢查",
      "pattern": "^(feat|fix|docs|style|refactor|test|chore|perf)\\(.+\\):.+$",
      "message": "Git commit訊息應遵循格式: type(scope): message。例如: feat(vote): 新增投票介面"
    },
    {
      "name": "Git分支命名規範",
      "pattern": "^(feature|bugfix|hotfix|release|support)/[a-z0-9-]+$",
      "message": "Git分支命名應遵循格式: type/name。例如: feature/vote-system"
    },
    {
      "name": "禁止直接提交至主分支",
      "pattern": "git push origin (main|master)",
      "message": "禁止直接推送至主分支，請使用Pull Request流程"
    },
    {
      "name": "合併衝突標記檢查",
      "pattern": "<<<<<<< HEAD|=======|>>>>>>> ",
      "message": "檔案中存在未解決的合併衝突標記，請解決後再提交"
    },
    {
      "name": "大型檔案檢查",
      "pattern": "\\.zip$|\\.mp4$|\\.mov$|\\.wav$",
      "message": "請勿將大型二進制檔案提交至Git倉庫，考慮使用Git LFS或其他解決方案"
    },
    {
      "name": "敏感資訊檢查",
      "pattern": "(password|token|key|secret|credential|pwd|api[_\\-]?key).*=.*",
      "message": "避免提交敏感資訊，請使用環境變數或密鑰管理系統"
    },
    {
      "name": "Tailwind類名檢查",
      "pattern": "class=\"[^\"]*\\b(mt-|mb-|ml-|mr-|mx-|my-|p-|pt-|pb-|pl-|pr-|px-|py-|bg-|text-|flex|grid|border)[^\"]*\"",
      "message": "請確保Tailwind類名按照推薦順序排列：佈局 > 尺寸 > 間距 > 背景 > 邊框 > 文字"
    },
    {
      "name": "避免內聯樣式",
      "pattern": "style=\"[^\"]+\"",
      "message": "避免使用內聯樣式，優先使用Tailwind類名或組件樣式"
    },
    {
      "name": "Tailwind樣板組件提醒",
      "pattern": "(class=\"[^\"]*(bg-gradient|rounded-full|shadow-lg)[^\"]*\")",
      "message": "考慮將常用的Tailwind組合提取為可復用組件或使用@apply指令創建自定義類"
    },
    {
      "name": "響應式設計檢查",
      "pattern": "(class=\"[^\"]*\\b(sm:|md:|lg:|xl:|2xl:)[^\"]*\")",
      "message": "請確保移動端優先設計模式，先定義移動視圖再添加響應式變體"
    }
  ]
} 